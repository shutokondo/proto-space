.media#comment-list
  .media-left.media-bottom.col-md-2
    = link_to image_tag(comment.user.avatar.to_s, {style: "width: 64px; height: 64px;", alt: "64x64", "data-holder-rendered" => "true", "data-src" => "holder.js/64x64",}), user_path(comment.user)
  .media-body.col-md-10
    %h4#bottom-aligned-media.media-heading
      = comment.user.name
      %a.anchorjs-link{:href => "#bottom-aligned-media"}
        %span.anchorjs-icon
    %p= comment.comment